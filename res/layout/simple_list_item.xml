            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/city"
            android:textColor="#FF8C8C8C"
            android:textSize="16dp"
            android:alpha="54"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/email"
            android:textColor="#FF8C8C8C"
